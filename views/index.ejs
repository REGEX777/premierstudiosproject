<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <link rel="stylesheet" href="output.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <script>
      tailwind.config = {
          theme: {
              extend: {
                  colors: {
                      primary: '#4361ee',
                      secondary: '#3f37c9',
                      accent: '#4895ef',
                      success: '#4cc9f0',
                      warning: '#f72585',
                  },
                  borderRadius: {
                      custom: '12px',
                  },
                  boxShadow: {
                      custom: '0 4px 20px rgba(0, 0, 0, 0.1)',
                  },
                  fontFamily: {
                      inter: ['Inter', 'sans-serif'],
                  },
              }
          }
      }
    </script>
  </head>
  <body class="font-inter min-h-screen bg-gradient-to-br from-[#f5f7fa] to-[#c3cfe2] text-gray-900">
    <!-- nav -->
    <div class="container mx-auto max-w-[1400px] px-8 py-8">
      <header class="mb-8 flex flex-wrap items-center justify-between gap-4">
        <div class="logo text-primary flex items-center gap-2 text-2xl font-bold">
          <i class="fas fa-cloud-sun-rain text-3xl"></i>
          <span>Weather App</span>
        </div>
        <div class="search-container relative w-full max-w-[500px] min-w-[250px]">
          <i class="fas fa-search search-icon text-primary absolute top-1/2 left-4 -translate-y-1/2"></i>
          <input type="text" class="search-input rounded-custom shadow-custom w-full border-2 rounded-lg py-3 pr-4 pl-12 text-base transition-all duration-300 focus:shadow-[0_4px_20px_rgba(67,97,238,0.3)] focus:outline-none" placeholder="Search for a city or location..." />
        </div>
      </header>
      <!-- main body -->
      <main class="main-content grid grid-cols-1 gap-8 lg:grid-cols-[1fr_350px]">
        <section class="weather-display rounded-custom shadow-custom bg-white p-8 rounded-lg">
          <div class="current-weather mb-12 flex flex-col items-center">
            <div class="location-info mb-4 text-center">
              <h1 class="location-name mb-1 text-3xl font-bold">New York, US</h1>
              <div class="location-details text-gray-600">Tuesday, June 15, 2023 • 3:45 PM</div>
            </div>
            <i class="fas fa-sun weather-icon text-accent my-4 text-6xl"></i>
            <div class="temperature mb-2 flex items-start text-6xl font-semibold">72<span class="mt-2 text-4xl">°F</span></div>
            <div class="weather-description mb-6 text-2xl text-gray-600 capitalize">sunny</div>
            <div class="weather-details mb-12 grid w-full grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-5">
              <div class="detail-card rounded-custom bg-gray-50 px-4 py-6 text-center transition-transform duration-300 hover:-translate-y-1">
                <i class="fas fa-tint text-primary mb-3 text-2xl"></i>
                <div class="detail-value mb-1 text-xl font-semibold">65%</div>
                <div class="detail-label text-sm text-gray-600">Humidity</div>
              </div>
              <div class="detail-card rounded-custom bg-gray-50 px-4 py-6 text-center transition-transform duration-300 hover:-translate-y-1">
                <i class="fas fa-wind text-primary mb-3 text-2xl"></i>
                <div class="detail-value mb-1 text-xl font-semibold">8 mph</div>
                <div class="detail-label text-sm text-gray-600">Wind Speed</div>
              </div>
              <div class="detail-card rounded-custom bg-gray-50 px-4 py-6 text-center transition-transform duration-300 hover:-translate-y-1">
                <i class="fas fa-compress-arrows-alt text-primary mb-3 text-2xl"></i>
                <div class="detail-value mb-1 text-xl font-semibold">1012 hPa</div>
                <div class="detail-label text-sm text-gray-600">Pressure</div>
              </div>
              <div class="detail-card rounded-custom bg-gray-50 px-4 py-6 text-center transition-transform duration-300 hover:-translate-y-1">
                <i class="fas fa-eye text-primary mb-3 text-2xl"></i>
                <div class="detail-value mb-1 text-xl font-semibold">10 mi</div>
                <div class="detail-label text-sm text-gray-600">Visibility</div>
              </div>
              <div class="detail-card rounded-custom bg-gray-50 px-4 py-6 text-center transition-transform duration-300 hover:-translate-y-1">
                <i class="fas fa-cloud-rain text-primary mb-3 text-2xl"></i>
                <div class="detail-value mb-1 text-xl font-semibold">0%</div>
                <div class="detail-label text-sm text-gray-600">Precipitation</div>
              </div>
            </div>
          </div>

          <div class="additional-metrics mt-12">
            <h3 class="section-title mb-6 flex items-center gap-3 text-2xl font-semibold">
              <i class="fas fa-chart-line text-primary"></i>
              Additional Metrics
            </h3>
            <div class="metrics-grid grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
              <div class="metric-card rounded-custom hover:shadow-custom bg-gray-50 p-6 transition-all duration-300 hover:-translate-y-1">
                <div class="metric-title mb-2 text-sm text-gray-600">Feels Like</div>
                <div class="metric-value text-xl font-semibold">74<span class="ml-1 text-sm text-gray-600">°F</span></div>
              </div>
              <div class="metric-card rounded-custom hover:shadow-custom bg-gray-50 p-6 transition-all duration-300 hover:-translate-y-1">
                <div class="metric-title mb-2 text-sm text-gray-600">Dew Point</div>
                <div class="metric-value text-xl font-semibold">59<span class="ml-1 text-sm text-gray-600">°F</span></div>
              </div>
              <div class="metric-card rounded-custom hover:shadow-custom bg-gray-50 p-6 transition-all duration-300 hover:-translate-y-1">
                <div class="metric-title mb-2 text-sm text-gray-600">UV Index</div>
                <div class="metric-value text-xl font-semibold">6<span class="ml-1 text-sm text-gray-600">of 10</span></div>
              </div>
              <div class="metric-card rounded-custom hover:shadow-custom bg-gray-50 p-6 transition-all duration-300 hover:-translate-y-1">
                <div class="metric-title mb-2 text-sm text-gray-600">Air Quality</div>
                <div class="metric-value text-xl font-semibold">Moderate</div>
                <div class="sun-times mt-4 flex justify-between">
                  <div class="sun-time flex flex-col items-center">
                    <i class="fas fa-sun mb-2 text-xl text-yellow-400"></i>
                    <div class="time-value font-semibold">5:42 AM</div>
                    <div class="time-label text-xs text-gray-600">Sunrise</div>
                  </div>
                  <div class="sun-time flex flex-col items-center">
                    <i class="fas fa-moon mb-2 text-xl text-yellow-400"></i>
                    <div class="time-value font-semibold">8:37 PM</div>
                    <div class="time-label text-xs text-gray-600">Sunset</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="weekly-forecast mt-12">
            <h3 class="section-title mb-6 flex items-center gap-3 text-2xl font-semibold">
              <i class="fas fa-calendar-week text-primary"></i>
              7-Day Forecast
            </h3>
            <div class="forecast-container grid grid-cols-2 gap-4 sm:grid-cols-4 lg:grid-cols-7">
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Today</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 15</div>
                <i class="fas fa-sun day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">75°</span>
                  <span class="day-low text-success font-semibold">62°</span>
                </div>
              </div>
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Wed</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 16</div>
                <i class="fas fa-cloud-sun day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">78°</span>
                  <span class="day-low text-success font-semibold">64°</span>
                </div>
              </div>
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Thu</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 17</div>
                <i class="fas fa-cloud-showers-heavy day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">72°</span>
                  <span class="day-low text-success font-semibold">60°</span>
                </div>
              </div>
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Fri</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 18</div>
                <i class="fas fa-cloud-sun day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">76°</span>
                  <span class="day-low text-success font-semibold">63°</span>
                </div>
              </div>
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Sat</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 19</div>
                <i class="fas fa-sun day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">80°</span>
                  <span class="day-low text-success font-semibold">65°</span>
                </div>
              </div>
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Sun</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 20</div>
                <i class="fas fa-sun day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">82°</span>
                  <span class="day-low text-success font-semibold">68°</span>
                </div>
              </div>
              <div class="forecast-day rounded-custom hover:shadow-custom cursor-pointer bg-gray-50 p-6 text-center transition-all duration-300 hover:bg-white">
                <div class="day-name mb-2 font-semibold">Mon</div>
                <div class="day-date mb-3 text-sm text-gray-600">Jun 21</div>
                <i class="fas fa-cloud-sun day-icon text-accent my-2 text-3xl"></i>
                <div class="day-temp flex justify-center gap-2">
                  <span class="day-high text-warning font-semibold">79°</span>
                  <span class="day-low text-success font-semibold">66°</span>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- sidebar -->
        <aside class="favorites-sidebar rounded-custom shadow-custom sticky top-8 h-fit bg-white p-6 rounded-lg">
          <h3 class="section-title mb-6 flex items-center gap-3 text-2xl font-semibold">
            <i class="fas fa-heart text-primary"></i>
            Favorite Locations
          </h3>
          <ul class="favorites-list mb-6 list-none">
            <li class="favorite-item flex items-center justify-between border-b border-gray-200 py-4 transition-all duration-200 last:border-0 hover:bg-gray-50">
              <div class="favorite-info flex flex-col gap-1">
                <span class="favorite-name font-medium">London, UK</span>
                <span class="favorite-desc text-xs text-gray-600">Partly Cloudy</span>
              </div>
              <span class="favorite-temp text-primary text-lg font-semibold">58°</span>
              <div class="favorite-actions flex gap-2">
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="View">
                  <i class="fas fa-eye"></i>
                </button>
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="Remove">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </li>
            <li class="favorite-item flex items-center justify-between border-b border-gray-200 py-4 transition-all duration-200 last:border-0 hover:bg-gray-50">
              <div class="favorite-info flex flex-col gap-1">
                <span class="favorite-name font-medium">Tokyo, JP</span>
                <span class="favorite-desc text-xs text-gray-600">Light Rain</span>
              </div>
              <span class="favorite-temp text-primary text-lg font-semibold">64°</span>
              <div class="favorite-actions flex gap-2">
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="View">
                  <i class="fas fa-eye"></i>
                </button>
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="Remove">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </li>
            <li class="favorite-item flex items-center justify-between border-b border-gray-200 py-4 transition-all duration-200 last:border-0 hover:bg-gray-50">
              <div class="favorite-info flex flex-col gap-1">
                <span class="favorite-name font-medium">Paris, FR</span>
                <span class="favorite-desc text-xs text-gray-600">Sunny</span>
              </div>
              <span class="favorite-temp text-primary text-lg font-semibold">68°</span>
              <div class="favorite-actions flex gap-2">
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="View">
                  <i class="fas fa-eye"></i>
                </button>
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="Remove">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </li>
            <li class="favorite-item flex items-center justify-between border-b border-gray-200 py-4 transition-all duration-200 last:border-0 hover:bg-gray-50">
              <div class="favorite-info flex flex-col gap-1">
                <span class="favorite-name font-medium">Sydney, AU</span>
                <span class="favorite-desc text-xs text-gray-600">Clear</span>
              </div>
              <span class="favorite-temp text-primary text-lg font-semibold">72°</span>
              <div class="favorite-actions flex gap-2">
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="View">
                  <i class="fas fa-eye"></i>
                </button>
                <button class="hover:bg-primary flex h-8 w-8 items-center justify-center rounded-full text-gray-600 transition-colors duration-200 hover:text-white" title="Remove">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </li>
          </ul>
          <div class="add-favorite mt-6 w-full max-w-md">
            <div class="flex">
              <input 
                type="text" 
                class="flex-1 min-w-0 border border-gray-300 px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 placeholder-gray-500 rounded-l-lg border-r-0"
                placeholder="Enter a city name..." 
              />
              <button 
                class="bg-primary hover:bg-secondary border cursor-pointer border-gray-300 text-black px-6 py-3 font-medium flex items-center gap-2 transition-all duration-200 hover:shadow-md whitespace-nowrap rounded-r-lg"
              >
                <i class="fas fa-plus"></i>
                <span>Add</span>
              </button>
            </div>
          </div>
        </aside>
      </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
  </body>
</html>
